extends simple

block vars
  - var title = "Sign Up";

{% load widget_tweaks %}

block content
  div.uk-vertical-align.uk-text-center.uk-height-1-1
    div.uk-vertical-align-middle(style="width: 250px")
      form.uk-panel.uk-panel-box.uk-form(action="{% url 'bt_signup' %}", method="post")
        {% csrf_token %}
        {% with WIDGET_ERROR_CLASS='uk-form-danger' WIDGET_REQUIRED_CLASS='required' %}
        each field in form
          div.uk-form-row
            {{ field.errors|safe }}
            {% render_field field class+="uk-width-1-1 uk-form-large" placeholder=field.label %}
        {% endwith %}
        div.uk-form-row
          button.uk-width-1-1.uk-button.uk-button-primary.uk-button-large(type="submit") Sign Up
